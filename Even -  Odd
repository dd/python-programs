from datetime import datetime, date
import sys
import os
print ('Начало диапозона: ')
t = True
while t:
    try:
        user_one = int (input(': '))
    except:
        print ("Только числа")
        continue
    break

print ('Конец диапозона: ')
p = True
while p:
    try:
        user_two = int (input(': '))
    except:
        print ("Только числа")
        continue


    if user_two < user_one:
        print ('Второе больше первого!')
        continue
    else:
        break
d = date.today()
time = datetime.now().date()
log = open('log ' + str (time) + '.txt', 'w')
for i in range(user_one,user_two + 1):
    if i % 2 == 0:
        log.write (str (i) + '  :четное \n')
    else:
        log.write(str (i) + '  :нечетное \n')
print ('Файл добавлен в ' + os.path.realpath(os.path.dirname(sys.argv[0])))



